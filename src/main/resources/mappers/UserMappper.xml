<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hz.dao.UserDao">

    <sql id="user_where">
        <where>
            <if test="userName!=null">
                user_name like concat('%',#{userName},'%')
            </if>
        </where>
    </sql>

    <select id="findUserList" resultType="User">
        select * from user
        <include refid="user_where"/>
        order by user_id asc limit #{pyl},#{pageSize}
    </select>

    <select id="UserCount" resultType="Integer">
        select count(1) from  user
        <include refid="user_where"/>
    </select>

    <delete id="deleteUserById">
        delete from user where user_id=#{adminId}
    </delete>

    <insert id="saveUser" >
        insert into user(user_name,user_password,user_sex,user_age,user_phone)
        values (#{userName},#{userPassword},#{userSex},#{userAge},#{userPhone}
        )
    </insert>
</mapper>